@model PageHeaderViewModel

<div class="page-header">
    <div>
        <h1 class="page-title">@Model.Title</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <div class="page-subtitle">@Model.Subtitle</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.ScopeNote))
        {
            <div class="page-subtitle">@Model.ScopeNote</div>
        }
    </div>
    @if (Model.Actions != null)
    {
        <div class="page-actions">@Model.Actions(null)</div>
    }
</div>
