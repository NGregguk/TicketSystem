@model IReadOnlyList<InternalSystem>
@{
    ViewData["Title"] = "Manage Internal Systems";
    var header = new PageHeaderViewModel
    {
        Title = "Internal Systems",
        Subtitle = "Manage the systems requesters can select.",
        Actions = @<div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-primary" asp-action="Categories">Categories</a>
            <a class="btn btn-outline-primary" asp-action="Users">Manage Users</a>
        </div>
    };
}

@await Html.PartialAsync("_PageHeader", header)

<div class="card mb-4">
    <div class="card-header section-title">Quick Add</div>
    <div class="card-body">
        <form asp-action="CreateInternalSystem" method="post" class="row g-3 align-items-end" data-disable-on-submit>
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input class="form-control" name="Name" placeholder="e.g., Helix, Snapfulfil" minlength="2" maxlength="80" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Active</label>
                <select class="form-select" name="IsActive">
                    <option value="true" selected>Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary" type="submit" data-loading-text="Adding...">Add System</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header section-title">System List</div>
    <div class="card-body">
        @if (!Model.Any())
        {
            @await Html.PartialAsync("_EmptyState", new EmptyStateViewModel
            {
                Title = "No internal systems yet",
                Message = "Add systems so requesters can tag their tickets."
            })
        }
        else
        {
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var system in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@system.Name</td>
                            <td>
                                <span class="badge @(system.IsActive ? "badge-soft" : "badge-muted")">
                                    @(system.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="EditInternalSystem" asp-route-id="@system.Id">Edit</a>
                                @if (system.IsActive)
                                {
                                    <form asp-action="DeactivateInternalSystem" method="post" class="d-inline" data-disable-on-submit>
                                        <input type="hidden" name="id" value="@system.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit" data-loading-text="Deactivating..." onclick="return confirm('Deactivate this internal system?');">Deactivate</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
