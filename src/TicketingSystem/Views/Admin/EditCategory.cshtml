@model CategoryEditViewModel
@{
    ViewData["Title"] = "Edit Category";
    var header = new PageHeaderViewModel
    {
        Title = "Edit Category",
        Subtitle = "Update the category name or toggle its availability.",
        Actions = @<a class="btn btn-outline-secondary" asp-action="Categories">Back</a>
    };
}

@await Html.PartialAsync("_PageHeader", header)

<div class="card">
    <div class="card-header section-title">Category Details</div>
    <div class="card-body">
        <form asp-action="EditCategory" method="post" data-disable-on-submit>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="IsActive" class="form-label">Active</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary" type="submit" data-loading-text="Saving...">Save</button>
                <a class="btn btn-outline-secondary" asp-action="Categories">Cancel</a>
            </div>
        </form>
    </div>
</div>
